.new_user
  .new_user__body
    %h2.new_user__body__address
      お届け先住所変更
    - if @address.errors.any?
      %span.err_message
        = I18n.t("errors.messages.not_saved")
    = form_with model: @address, url: user_edit_address_path do |a|
      .new_user__body__box
        .new_user__body__box__group
          .new_user__body__box__group__head
            %label
              郵便番号
            %span.mandatory
              必須
            %br
            - if @address.errors.any?
              %span.err_message
                =  @address.errors.full_messages_for(:code).shift
            = a.text_field :code, class: "new_user__body__box__group__form", placeholder: "例)123-4567", maxlength:'8'
          .new_user__body__box__group__head
            %label
              都道府県
            %span.mandatory
              必須
            %br
            - if @address.errors.any?
              %span.err_message
                =  @address.errors.full_messages_for(:area).shift
            = a.text_field :area, class: "new_user__body__box__group__form", placeholder: "例)東京都"
          .new_user__body__box__group__head
            %label
              都道府県カナ（全角）
            %span.mandatory
              必須
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:area_kana).shift
            = a.text_field :area_kana, class: "new_user__body__box__group__form", placeholder: "例)トウキョウト"
        .new_user__body__box__group
          .new_user__body__box__group__head
            %label
              市区町村
            %span.mandatory
              必須
            %br
            - if @address.errors.any?
              %span.err_message
                =  @address.errors.full_messages_for(:city).shift
            = a.text_field :city, class: "new_user__body__box__group__form", placeholder: "例)渋谷区"
          .new_user__body__box__group__head
            %label
              市区町村カナ（全角）
            %span.mandatory
              必須
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:city_kana).shift
            = a.text_field :city_kana, class: "new_user__body__box__group__form", placeholder: "例)シブヤク"
        .new_user__body__box__group
          .new_user__body__box__group__head
            %label
              番地
            %span.mandatory
              必須
            %br
            - if @address.errors.any?
              %span.err_message
                =  @address.errors.full_messages_for(:village).shift
            = a.text_field :village, class: "new_user__body__box__group__form", placeholder: "例)道玄坂2丁目23-12"
          .new_user__body__box__group__head
            %label
              番地カナ（全角）
            %span.mandatory
              必須
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:village_kana).shift
            = a.text_field :village_kana, class: "new_user__body__box__group__form", placeholder: "例)ドウゲンザカニチョウメ"
        .new_user__body__box__group
          .new_user__body__box__group__head
            %label
              建物名
            %span.gray
              任意
            %br
          = a.text_field :building, class: "new_user__body__box__group__form", placeholder: "例)フォンティスビル7F"
          .new_user__body__box__group__head
            %label
              建物名カナ（全角）
            %span.gray
              任意
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:building_kana).shift
          = a.text_field :building_kana, class: "new_user__body__box__group__form", placeholder: "例)フォンティスビル"
        .new_user__body__box__group
          .new_user__body__box__group__head
            %label
              送付先氏名（全角）
            %span.gray
              任意
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:destination_first).shift
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:destination_last).shift
          .namebox
            = a.text_field :destination_first, class: "new_user__body__box__group__form nmform", placeholder: "例）山田"
            = a.text_field :destination_last, class: "new_user__body__box__group__form nmform", placeholder: "例）彩"
        .new_user__body__box__group
          .new_user__body__box__group__head
            %label
              送付先氏名（カナ）
            %span.gray
              任意
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:destination_first).shift
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:destination_last).shift
          .namebox
            = a.text_field :destination_first_kana, class: "new_user__body__box__group__form nmform", placeholder: "例）ヤマダ"
            = a.text_field :destination_last_kana, class: "new_user__body__box__group__form nmform", placeholder: "例）アヤ"
          .new_user__body__box__group__head
            %label
              電話番号（半角）
            %span.gray
              任意
            - if @address.errors.any?
              .err_message
                =  @address.errors.full_messages_for(:phone_number).shift
            = a.text_field :phone_number, class: "new_user__body__box__group__form", placeholder: "例）09012345678", maxlength:'11'
        .new_user__body__box__group
          .new_user__body__box__group__head
            %a
              ※本人情報は正しく入力してください。
              会員登録後、修正するにはお時間を頂く場合があります。
        = a.submit "次へ進む", class: 'btn-default btn'