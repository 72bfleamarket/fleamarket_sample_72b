= render 'products/shared/header'

%nav.breadCrumbs
  - breadcrumb :mypage
  = render "layouts/breadcrumbs"


.new_user
  = form_with model: @user do |f|
    .new_user__body
      .new_user__body__profile

      .new_user__body__content
        profile
        = f.file_field :icons
        = f.text_area :profile
        = f.submit "登録する", class: 'btn-default btn'



      .new_user__body__box
        = link_to 'マイページへ戻る', user_path, class: 'btn-default btn'


= render 'products/shared/footer'

= render 'products/shared/purchase_btn'