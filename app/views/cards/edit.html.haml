= render 'products/shared/header'

.user-mypage.clearfix
  = render 'users/side-bar'

  .user-mypage__main-content
    .user-mypage__main-content__content-title
      カード情報追加
    = form_with model: @card, class: 'user-mypage__main-content__content-form' do |form|
      .user-mypage__main-content__content-form__content-box
        .user-mypage__main-content__content-form__content-box__infomartion 
          カード番号
        = form.text_field :email , class: 'user-mypage__main-content__content-form__content-box__form', placeholder: '半角数字のみ'
      .user-mypage__main-content__content-form__content-box
        .user-mypage__main-content__content-form__content-box__infomartion
          有効期限
        = form.text_field :data, class: 'user-mypage__main-content__content-form__content-box__form__year'
        = form.text_field :data, class: 'user-mypage__main-content__content-form__content-box__form__month'
      .user-mypage__main-content__content-form__content-box        
        .user-mypage__main-content__content-form__content-box__infomartion         
          セキュリティーコード
        = form.password_field :password , class: 'user-mypage__main-content__content-form__content-box__form', placeholder: 'カード裏面の４桁または３桁の数字'
      .user-mypage__main-content__content-form__content-box
        .user-mypage__main-content__content-form__content-box__btn
        = form.submit '登録する', class: 'user-mypage__main-content__content-form__content-box__btn__send-btn'


= render 'products/shared/footer'

