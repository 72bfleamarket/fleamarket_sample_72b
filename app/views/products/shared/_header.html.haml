%header.header
  .header__headerInner
    .header__headerInner__mainHeader
      %h1.header__headerInner__mainHeader__icon
        = link_to root_path do
          = image_tag 'material/logo/logo.png'

      .header__headerInner__mainHeader__searchBox
        = form_with(url: products_searches_path, local: true, method: :get) do |form|
          = form.text_field :keyword, placeholder: 'キーワードから探す', class: 'header__main-header__search-box__search-field'
          %label{class: "header__main-header__search-box__search-btn"}
            .header__headerInner__mainHeader__searchBox__icon
              = image_tag 'material/icon/icon-search 1.png'
            = form.submit '検索', class: 'header__headerInner__mainHeader__searchBox__submit'

    .header__headerInner__nav
      %ul.header__headerInner__nav__listsLeft
        %li.header__headerInner__nav__listsLeft__item
          = link_to '#', id: 'catBtn' do
            カテゴリー
        %li.header__headerInner__nav__listsLeft__item.header__headerInner__nav__listsLeft__item--brand
          = link_to '#' do
            ブランド

      %ul.header__headerInner__nav__listsRight
        %li.header__headerInner__nav__listsRight__item
          = link_to '#' do
            ログイン
        %li.header__headerInner__nav__listsRight__item
          = link_to '#' do
            新規会員登録
