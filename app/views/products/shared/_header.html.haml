.header
  .header__main-header
    = link_to root_path, class: 'header__main-header__icon' do
      = image_tag 'material/logo/logo.png', class: 'header__main-header__icon--logo'
    
    = form_with(url: products_searches_path, local: true, method: :get, class: 'header__main-header__search-box') do |form|
      = form.text_field :keyword, placeholder: 'キーワードから探す', class: 'header__main-header__search-box__search-field'
      %label{class: "header__main-header__search-box__search-btn"}
        = image_tag 'material/icon/icon-search 1.png'
        = form.submit '検索', class: 'header__main-header__search-box__search-btn--submit'

  .header__nav
    .header__nav__left-nav
      .header__nav__left-nav__category-btn
        カテゴリー
      = link_to '#', class: 'header__nav__left-nav__brand-btn' do
        ブランド
    .header__nav__right-nav
      = link_to '#', class: 'header__nav__right-nav__login' do
        ログイン
      = link_to '#', class: 'header__nav__right-nav__register' do
        新規会員登録
